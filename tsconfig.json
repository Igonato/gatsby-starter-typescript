{
    "include": ["./src/**/*"],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["dom", "es2017"],
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "classnameTransform": "camelCase"
                }
            }
        ]
    }
}
